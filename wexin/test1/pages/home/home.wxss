page {
  background-color: #dbdbdb;
}

.bannerWarp {
  width: 750rpx;
  height: 300rpx;
}

.bannerItem {
  width: 100%;
}

.bannerImg {
  width: 100%;
}

.navWarp {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.newsWarp {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.newsItem {
  width: 100%;
  height: 200rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #dbdbdb;
}

.newsImg {
  width: 35%;
  height: 80%;
}

.newsText {
  width: 70%;
  height: 80%;
  font-size: 30rpx;
  margin: 0 0 0 10rpx;
}

.newContent {
  color: #666666;
  font-size: 25rpx;
}