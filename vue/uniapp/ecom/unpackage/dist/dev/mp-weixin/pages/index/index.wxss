.content {
  width: 750rpx;
  height: 100vh;
  background: linear-gradient(red 20%, #ccc 50%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav {
  width: 750rpx;
  height: 80rpx;
  position: absolute;
  top: 50rpx;
  z-index: 99;
  display: flex;
  align-items: center;
}
.nav .login {
  width: 200rpx;
  height: 70rpx;
  background: url(http://localhost:3000/public/img/logo.png) no-repeat;
  background-size: contain;
}
.nav .nav_search {
  width: 400rpx;
  height: 70rpx;
}
.u-search__content {
  height: 60rpx;
}
.banner_wrap {
  margin-top: 180rpx;
  width: 750rpx;
  height: 300rpx;
}
.banner_wrap .swiper {
  width: 100%;
  height: 100%;
}
.banner_wrap .banner_img {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 300rpx;
}
.banner_wrap .banner_img ._image {
  width: 700rpx;
  border-radius: 20rpx;
}
.news_warp {
  width: 700rpx;
  height: 100rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.news_warp .news_title {
  font-weight: 700;
  margin-left: 20rpx;
}
.news_warp .news_title .red {
  color: red;
}
.news_warp .border {
  margin: 0 30rpx;
  width: 1rpx;
  height: 35rpx;
  border-left: 2rpx solid gray;
}
.news_warp .right {
  margin-left: auto;
  margin-right: 20rpx;
}

