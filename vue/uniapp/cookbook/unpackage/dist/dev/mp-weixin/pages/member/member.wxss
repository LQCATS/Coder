.header_warp {
  position: fixed;
  top: 0;
  z-index: 999;
}
.banner {
  width: 750rpx;
  height: 324rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 270rpx;
}
.banner .banner_bg {
  width: 686rpx;
  height: 324rpx;
  background-color: #33353d;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.banner .banner_bg .banner_top {
  display: flex;
  margin-top: 32rpx;
}
.banner .banner_bg .banner_top .top_left {
  width: 128rpx;
  height: 129rpx;
}
.banner .banner_bg .banner_top .top_left image {
  width: 100%;
}
.banner .banner_bg .banner_top .top_right {
  width: 482rpx;
  padding-left: 18rpx;
  box-sizing: border-box;
}
.banner .banner_bg .banner_top .top_right .right_top {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.banner .banner_bg .banner_top .top_right .right_top .title {
  color: #939393;
  font-size: 24rpx;
}
.banner .banner_bg .banner_top .top_right .right_top .member_status {
  width: 108rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  color: #76401f;
  font-size: 22rpx;
  background-color: #ebc3a7;
  border-radius: 20rpx;
}
.banner .banner_bg .banner_top .top_right .right_bottom {
  color: #e6e6e6;
  font-size: 28rpx;
  margin-top: 26rpx;
}
.banner .banner_bg .banner_bootom {
  width: 100%;
  height: 96rpx;
  background-color: #181818;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.banner .banner_bg .banner_bootom .icon_warp {
  height: 75rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.banner .banner_bg .banner_bootom .icon_warp image {
  width: 40rpx;
  height: 40rpx;
}
.banner .banner_bg .banner_bootom .icon_warp text {
  color: #f9d9b3;
  font-size: 22rpx;
}
.content_warp {
  padding-left: 32rpx;
  box-sizing: border-box;
}
.content_warp .menu_warp {
  margin-top: 40rpx;
}
.content_warp .menu_warp .warp_title {
  margin-bottom: 28rpx;
  color: #303030;
  font-size: 40rpx;
  font-weight: 700;
}
.scroll_wrap .item {
  flex-shrink: 0;
  margin-right: 12rpx;
}
.like {
  margin-bottom: 35rpx;
}

