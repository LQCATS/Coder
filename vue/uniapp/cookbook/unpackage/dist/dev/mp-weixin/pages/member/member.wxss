.banner {
  width: 750rpx;
  height: 324rpx;
  background-color: palegoldenrod;
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner .banner_bg {
  width: 686rpx;
  height: 324rpx;
  background-color: #33353d;
  border-radius: 16rpx;
}
.banner .banner_bg .banner_top {
  display: flex;
  margin: 32rpx 0 0 32rpx;
}
.banner .banner_bg .banner_top .top_left {
  width: 128rpx;
  height: 129rpx;
  background-color: skyblue;
}
.banner .banner_bg .banner_top .top_right {
  background-color: yellow;
  width: 482rpx;
}
.banner .banner_bg .banner_top .top_right .right_top {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.banner .banner_bg .banner_top .top_right .right_top .title {
  color: #939393;
  font-size: 24rpx;
}
.banner .banner_bg .banner_top .top_right .right_top .member_status {
  width: 108rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  color: #76401f;
  font-size: 22rpx;
  background-color: #ebc3a7;
  border-radius: 20rpx;
}

