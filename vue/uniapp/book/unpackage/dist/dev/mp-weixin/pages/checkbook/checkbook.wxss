/* uni.scss */
page {
  background-color: #f0fbff;
}
.content {
  width: 750rpx;
  height: 89vh;
  background-color: #f0fbff;
}
.header {
  width: 750rpx;
  height: 145rpx;
  background-color: #2badff;
}
.content_warp {
  display: flex;
}
.content_left {
  width: 200rpx;
}
.content_right {
  width: 550rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.type_item {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #666;
  padding: 20rpx 0;
}
.booklist_item {
  width: 245rpx;
  height: 430rpx;
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #ccc;
  line-height: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.booklist_item image {
  width: 80%;
}
.booklist_item .book_title {
  color: #333;
  text-align: center;
  font-size: 30rpx;
  margin: 10rpx 0;
}
.booklist_item .book_msg {
  height: 80rpx;
  overflow: hidden;
}
.booklist_item .shopping {
  background-color: #1da0f3;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  margin-left: auto;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.active {
  background-color: #fff;
  color: #2badff;
}

